<Window x:Class="IconMaker.Model.ColorFilters.ModifyColors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IconMaker.Model.ColorFilters"
        xmlns:wpf="clr-namespace:IconMaker.wpf"
        mc:Ignorable="d"
        Title="ModifyColors"
        Height="450"
        Width="800">
    <Grid Background="{x:Static SystemColors.ControlBrush}">
        <wpf:ColorWheel OuterRadius="1.0"
                        InnerRadius="0.6"
                        RenderTransformOrigin="0.5,0.5"
                        Cursor="{x:Static Cursors.Hand}">
            <wpf:ColorWheel.RenderTransform>
                <RotateTransform Angle="30" />
            </wpf:ColorWheel.RenderTransform>
        </wpf:ColorWheel>
        <wpf:ColorWheel OuterRadius="0.5"
                        InnerRadius="0.1"
                        RenderTransformOrigin="0.5,0.5">
        </wpf:ColorWheel>
    </Grid>
</Window>
