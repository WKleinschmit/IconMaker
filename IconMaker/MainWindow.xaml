<Window x:Class="IconMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IconMaker"
        xmlns:model="clr-namespace:IconMaker.Model"
        xmlns:wpf="clr-namespace:IconMaker.wpf"
        mc:Ignorable="d"
        Title="Icon Maker"
        Activated="MainWindow_OnActivated">
    <Window.Resources>
        <wpf:TreeTemplateSelector x:Key="TTS" />
        <wpf:BooleanToVisibilityConverter x:Key="B2V" />
        <wpf:BooleanToBrushConverter x:Key="B2Brush" TrueValue="PowderBlue" FalseValue="AliceBlue"/>
        <HierarchicalDataTemplate x:Key="{x:Type model:IconLibrary}"
                                  DataType="model:IconLibrary"
                                  ItemsSource="{Binding Categories}">
            <StackPanel Orientation="Horizontal">
                <Image Source="img/library@14px.png"
                       Stretch="None"
                       Margin="0 0 3 0" />
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate x:Key="{x:Type model:Category}"
                                  DataType="model:Category">
            <StackPanel Orientation="Horizontal">
                <Image Source="img/package@14px.png"
                       Stretch="None"
                       Margin="0 0 3 0" />
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </HierarchicalDataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <model:MainModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1"
              Margin="0,0,0,3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0"
                       Background="PowderBlue"
                       LastChildFill="True"
                       Margin="0,0,3,0">
                <TextBlock DockPanel.Dock="Top"
                           FontSize="16"
                           Margin="4"
                           Background="Transparent"
                           Foreground="RoyalBlue">Icon Sets</TextBlock>
                <TreeView ItemsSource="{Binding Libraries}"
                          ItemTemplateSelector="{StaticResource TTS}"
                          x:Name="LibraryTree"
                          BorderThickness="0"
                          SelectedItemChanged="LibraryTree_OnSelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem"
                               BasedOn="{StaticResource {x:Type TreeViewItem}}">
                            <Setter Property="IsExpanded"
                                    Value="True" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            </DockPanel>
            <GridSplitter Grid.Column="0"
                          Background="PowderBlue"
                          Width="3"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Stretch" />
            <DockPanel Grid.Column="1"
                       Background="PowderBlue"
                       LastChildFill="True"
                       Margin="0,0,3,0">
                <StackPanel DockPanel.Dock="Top"
                            Orientation="Horizontal">
                    <TextBlock FontSize="16"
                               Margin="4 4 0 4"
                               Background="Transparent"
                               Foreground="RoyalBlue"
                               Text="{Binding Library.Name, Mode=OneWay}">
                    </TextBlock>
                    <TextBlock FontSize="16"
                               Margin="0 4 4 4"
                               Background="Transparent"
                               Foreground="RoyalBlue"
                               Visibility="{Binding HasCategory, Converter={StaticResource B2V}}"
                               wpf:TextBlockExtension.RemoveEmptyRuns="True"
                               wpf:TextBlockExtension.PreserveSpace="False">
                        <Run Text=" - " />
                        <Run Text="{Binding Category.Name, Mode=OneWay}" />
                        <Run Text=" (" />
                        <Run Text="{Binding Category.Icons.Count, Mode=OneWay}" />
                        <Run Text=")" />
                    </TextBlock>
                </StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <ScrollViewer Grid.Row="0"
                                  Margin="0 0 0 3">
                        <ListBox ItemsSource="{Binding Category.Icons}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Background="{x:Static SystemColors.WindowBrush}"
                                               IsItemsHost="True"
                                               Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="model:Icon">
                                    <Border CornerRadius="8"
                                            Width="120"
                                            Height="100"
                                            Margin="4">
                                        <DockPanel HorizontalAlignment="Center"
                                                   IsHitTestVisible="False"
                                                   LastChildFill="True">
                                            <ContentControl Height="48"
                                                            Width="48"
                                                            Margin="8 8 8 0"
                                                            DockPanel.Dock="Top"
                                                            Content="{Binding Viewbox}" />
                                            <TextBlock Text="{Binding Title}"
                                                       TextWrapping="Wrap"
                                                       Margin="4"
                                                       HorizontalAlignment="Center"
                                                       TextAlignment="Center" />
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                    <GridSplitter Grid.Row="0"
                                  Background="PowderBlue"
                                  Height="3"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Bottom" />
                    <DockPanel  Grid.Row="1"
                                LastChildFill="True">
                        <TextBlock DockPanel.Dock="Top"
                                   FontSize="16"
                                   Margin="4"
                                   Background="Transparent"
                                   Foreground="RoyalBlue"
                                   Visibility="{Binding HasLibrary, Converter={StaticResource B2V}, ConverterParameter=Visible;Hidden}"
                                   wpf:TextBlockExtension.RemoveEmptyRuns="True"
                                   wpf:TextBlockExtension.PreserveSpace="False">
                            <Run>Overlays (</Run>
                            <Run Text="{Binding Library.Overlays.Count, Mode=OneWay}" />
                            <Run>)</Run>
                        </TextBlock>
                        <ScrollViewer>
                            <ListBox ItemsSource="{Binding Library.Overlays}"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Background="{x:Static SystemColors.WindowBrush}" 
                                                   IsItemsHost="True"
                                                   Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="model:IconOverlay">
                                        <Border CornerRadius="6"
                                                Width="90"
                                                Height="75"
                                                Margin="3">
                                            <DockPanel HorizontalAlignment="Center"
                                                       IsHitTestVisible="False"
                                                       LastChildFill="True">
                                                <ContentControl Height="36"
                                                                Width="36"
                                                                Margin="8 8 8 0"
                                                                DockPanel.Dock="Top"
                                                                Content="{Binding Viewbox}" />
                                                <TextBlock Text="{Binding Title}"
                                                           TextWrapping="Wrap"
                                                           Margin="3"
                                                           HorizontalAlignment="Center"
                                                           TextAlignment="Center" />
                                            </DockPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </DockPanel>
            <GridSplitter Grid.Column="1"
                          Background="PowderBlue"
                          Width="3"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Stretch" />
        </Grid>
        <GridSplitter Grid.Row="1"
                      Background="PowderBlue"
                      Height="3"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Bottom" />
        <StatusBar Grid.Row="3">
            <StatusBarItem x:Name="LoadProgress"
                           Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Scanning icon library:"
                           VerticalAlignment="Center" />
                    <ProgressBar x:Name="ProgressBar"
                                 Height="16"
                                 Width="256"
                                 Minimum="0"
                                 Maximum="1000"
                                 Value="0"
                                 VerticalAlignment="Center" />
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem x:Name="Ready">Ready.</StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
